# Waitlist persistence via GitHub Contents API
# Set these in your deployment environment (do not commit real secrets)

# e.g. xs00001111/smtm_page
GITHUB_REPO=

# GitHub token with repo contents:read/write permissions
GITHUB_TOKEN=

# Optional (defaults shown)
GITHUB_BRANCH=main
WAITLIST_FILE=data/waitlist.csv

# Telegram Bot Configuration
# For local development: Create a separate dev bot with @BotFather
# For production (Render): Use your production bot token
# Note: Only ONE instance can run per bot token at a time
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Optional: custom paths for bot data
# TELEGRAM_SUBSCRIPTIONS_FILE=apps/telegram-bot/data/subscriptions.csv
# TELEGRAM_LINKS_FILE=apps/telegram-bot/data/links.csv

# Supabase (for follow persistence)
# SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
# SUPABASE_ANON_KEY=anon_public_key
# SUPABASE_SERVICE_ROLE_KEY=service_role_key   # keep server-side only
# Enable alpha persistence/reads (optional)
# SUPABASE_ALPHA_ENABLED=true

# Environment (development or production)
NODE_ENV=development

# Public URL for users to start the bot (e.g., https://t.me/your_bot_username)
NEXT_PUBLIC_TELEGRAM_BOT_URL=https://t.me/your_bot_username

# Link Portal (optional, for Telegram Login Widget on web)
# When set, the /link/exec page will include the Telegram Login widget so users
# outside of Telegram can authenticate and return with initData.
NEXT_PUBLIC_TG_BOT_USERNAME=your_bot_username_without_at

# Polymarket CLOB host (override only if needed)
NEXT_PUBLIC_POLYMARKET_CLOB_HOST=https://clob.polymarket.com

# Privy (embedded wallet + auth UI)
NEXT_PUBLIC_PRIVY_APP_ID=
# Optional: configure login methods (comma-separated). Default: email,sms,google
# Common values: email,sms,google,apple,discord,twitter
NEXT_PUBLIC_PRIVY_LOGIN_METHODS=email,sms,google

# Timezone for scheduling (America/New_York, Europe/London, etc.)
TIMEZONE=America/New_York

# Polymarket API URLs (optional, defaults are set)
POLYMARKET_MARKETS_URL=https://gamma-api.polymarket.com/markets
POLYMARKET_PRICES_URL=https://clob.polymarket.com/prices-history

# Polymarket CLOB API Credentials (optional - only needed for clob_user topic)
# For market alerts and whale trades, these are NOT required
# Only needed if you want to track personal orders/trades
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# WebSocket monitoring settings
WEBSOCKET_ENABLED=true
WEBSOCKET_INCLUDE_AGG_ORDERBOOK=false
PRICE_CHANGE_THRESHOLD=5
WHALE_TRADE_MIN_SIZE=1000

# Alpha cooldowns (seconds)
ALPHA_COOLDOWN_WHALE_SECONDS=90
ALPHA_COOLDOWN_SKEW_SECONDS=240
ALPHA_COOLDOWN_INSIDER_SECONDS=240

# Logging
LOG_LEVEL=info
# Discord Bot (optional)
# DISCORD_BOT_TOKEN=your_discord_bot_token_here
# DISCORD_APPLICATION_ID=your_discord_application_id

# Resolution monitor tuning (optional)
# Base scan for all followed markets (minutes)
RESOLUTION_SCAN_BASE_MINUTES=10
# Near-end scan for markets ending within this window (minutes between scans)
RESOLUTION_SCAN_NEAR_MINUTES=2
# Near-end window size (hours until end time)
RESOLUTION_NEAR_WINDOW_HOURS=24
# Final scan frequency (seconds) for markets ending within the final window
RESOLUTION_SCAN_FINAL_SECONDS=30
# Final window size (minutes until end time)
RESOLUTION_FINAL_WINDOW_MINUTES=60

# Alpha freshness window for reads (seconds)
ALPHA_FRESH_WINDOW_SECONDS=600

# Background scanners (disable for manual testing)
RESOLUTION_MONITOR_ENABLED=false
ALPHA_HARVEST_ENABLED=false
ALPHA_HARVEST_INTERVAL_MS=180000
OBSERVER_REFRESH_ENABLED=false
